<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView 
            android:id="@+id/txtGif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(资源后缀是gif,图片也是gif)显示gif"/>
        <ImageView
            android:id="@+id/imgGif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGif1" />

         <TextView 
            android:id="@+id/txtGif2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgGif1"
            android:text="(资源后缀是gif,图片不是gif)显示gif"/>
        <ImageView
            android:id="@+id/imgGif2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGif2" />
        
         <TextView 
            android:id="@+id/txtGif3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgGif2"
            android:text="(资源后缀是gif,图片不是gif)强制以gif的形式显示"/>
        <ImageView
            android:id="@+id/imgGif3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGif3" />
        
        <TextView 
            android:id="@+id/txtGif4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgGif3"
            android:text="将gif图片以bitmap的形式显示,只显示第一帧"/>
        <ImageView
            android:id="@+id/imgGif4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGif4" />
        
    </RelativeLayout>

</ScrollView>